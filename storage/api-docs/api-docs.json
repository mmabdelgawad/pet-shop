{
    "openapi": "3.0.0",
    "info": {
        "title": "Petshop API",
        "version": "1.0"
    },
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Handle login action",
                "operationId": "login",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "User email",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "User password",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Validation errors"
                    },
                    "401": {
                        "description": "Invalid credentials."
                    },
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Handle logout action",
                "operationId": "logout",
                "responses": {
                    "401": {
                        "description": "Bearer token is missing."
                    },
                    "404": {
                        "description": "User not found."
                    },
                    "200": {
                        "description": "Successful response"
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        },
        "/api/v1/brands": {
            "post": {
                "tags": [
                    "Brand"
                ],
                "summary": "Display brands list",
                "operationId": "listBrands",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "limit": {
                                        "description": "Page limit",
                                        "type": "string"
                                    },
                                    "page": {
                                        "description": "Page number",
                                        "type": "string"
                                    },
                                    "sortBy": {
                                        "description": "Sort by",
                                        "type": "string"
                                    },
                                    "sort": {
                                        "description": "Sort type",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        },
        "/api/v1/categories": {
            "post": {
                "tags": [
                    "Category"
                ],
                "summary": "Display categories list",
                "operationId": "listCategories",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "limit": {
                                        "description": "Page limit",
                                        "type": "string"
                                    },
                                    "page": {
                                        "description": "Page number",
                                        "type": "string"
                                    },
                                    "sortBy": {
                                        "description": "Sort by",
                                        "type": "string"
                                    },
                                    "sort": {
                                        "description": "Sort type",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        },
        "/api/v1/promotions": {
            "post": {
                "tags": [
                    "Promotion"
                ],
                "summary": "Display promotions list",
                "operationId": "listPromotions",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "limit": {
                                        "description": "Page limit",
                                        "type": "string"
                                    },
                                    "page": {
                                        "description": "Page number",
                                        "type": "string"
                                    },
                                    "sortBy": {
                                        "description": "Sort by",
                                        "type": "string"
                                    },
                                    "sort": {
                                        "description": "Sort type",
                                        "type": "string"
                                    },
                                    "valid": {
                                        "description": "Valid",
                                        "type": "boolean"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearer_token": {
                "type": "http",
                "scheme": "bearer",
                "description": "Bearer token authentication",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}